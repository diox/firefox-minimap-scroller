{
  "applications": {
    "gecko": {
      "id": "{7e7eda8f-2e5d-4f43-86a9-07c6139e7a08}",
      "strict_min_version": "50.0"
    }
  },

  "background": {
    "scripts": ["src/background/background.js"]
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": "icon.svg",
    "default_title": "Minimap"
  },

  "content_scripts": [
    {
      "js": ["src/content_scripts/base.js"],
      "matches": ["<all_urls>"]
    }
  ],

  "description": "A minimap sidebar to scroll in web pages, similar to some video games and modern text editors.",

  "homepage_url": "https://github.com/diox/firefox-minimap-scroller/",

  "manifest_version": 2,

  "name": "Minimap Scroller",

  "options_ui": {
      "browser_style": true,
      "page": "src/options/options.html"
  },

  "permissions": [
    "<all_urls>",
    "storage",
    "tabs" 
  ],

  "sidebar_action": {
    "browser_style": true,
    "default_icon": "icon.svg",
    "default_panel": "src/sidebar/sidebar.html",
    "default_title": "Minimap"
  },

  "version": "0.4.0"
}
